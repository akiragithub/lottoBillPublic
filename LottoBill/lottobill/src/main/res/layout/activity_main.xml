<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layout_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/cur_num_text_tv"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cur_num_text_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
2
        <TextView
            android:id="@+id/cur_num_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="54254558"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/time_imv"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:text="2019-07-09 19:56:30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/alarm_imv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/count_down_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/void_tv"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/first_num_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

           - <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/first_round_imv"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@color/colorAccent"
                app:riv_corner_radius="30dp"/>

            <TextView
                android:id="@+id/first_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:textSize="20sp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/first_plus_tv"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:text="+"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <FrameLayout
            android:id="@+id/second_num_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/second_round_imv"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@color/colorAccent"
                app:riv_corner_radius="30dp"/>

            <TextView
                android:id="@+id/second_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:textSize="20sp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/second_plus_tv"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:text="+"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <FrameLayout
            android:id="@+id/third_num_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/third_round_imv"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@color/colorAccent"
                app:riv_corner_radius="30dp"/>

            <TextView
                android:id="@+id/third_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_gravity="center"
                android:textSize="20sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/equal_tv"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:text="="
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <FrameLayout
            android:id="@+id/result_num_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/result_round_imv"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@color/colorAccent"
                app:riv_corner_radius="30dp"/>

            <TextView
                android:id="@+id/result_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:layout_gravity="center"
                android:textSize="20sp"/>

        </FrameLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/copy_imv"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="40dip"
            android:src="@drawable/ic_content_copy_primary_24dp"
            app:riv_corner_radius="10dp" />

        <TextView
            android:id="@+id/void_2_tv"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/first_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_2" >
    </View>
    <LinearLayout
        android:id="@+id/layout_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginTop=".5dp">

    <LinearLayout
        android:id="@+id/layout_3_first"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop=".5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_horizontal_line" >
        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="@string/loading"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/data_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
        <View
            android:id="@+id/vertical_line"
            android:layout_width="0dp"
            android:layout_weight=".05"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@id/pull_to_refresh"
            app:layout_constraintTop_toTopOf="parent" >
        </View>
            <ListView
                android:id="@+id/pattern_lv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/second_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimary">
    </View>
    <LinearLayout
        android:id="@+id/layout_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/add_pattern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add_alert_accent_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/reset_pattern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_autorenew_accent_24dp"
            app:layout_constraintLeft_toRightOf="@id/add_pattern"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/mute_alarm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_volume_off_accent_24dp"
            app:layout_constraintLeft_toRightOf="@id/add_pattern"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</LinearLayout>